<header class='header row g-0'>
    <div class='col-3'>
    {{> logo}}
    </div>
    <nav class='header_nav col-9'>
    <div class='header_nav_right'>
        {{> nav list=header}}
    </div>
    </nav>
</header>

{{#with main}}
    <div class='main'>
         <img src='{{image}}' alt='main image' class='main_img'>
        <div class='main_content'>
            <h1 class='main_title'>{{heading}}</h1>
            <p class="main_text">{{description}}</p>
            <a href='{{href}}' class="main_button button">{{button}}</a>
        </div>    
            
    </div>
    
{{/with}}

<section class='featured'>
    {{#each featured}}
       {{>cardFeatured data=this}}
    {{/each}}
</section>

<section class='actions'>
    <div class='form'>
       {{#each actions}} 
            <div class='form_content'>
                <h3 class='form_title'>{{heading}}</h3>
                <div class='form_action'>
                   <a href='{{url}}' class='form_button button'>
                    {{text}}
                   </a>
                </div>
            </div>
       {{/each}}
    </div>
</section>



<footer class='row footer'>

    <div class='col-3'>
        {{> logo}}
        <span class='footer_copyright'>Copyright 2023-2024</span>
    </div>

    {{#each footer}}
        <div class='col-3'>
        <span class='footer_title'>{{title}}</span> 
        {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
    
</footer>
  